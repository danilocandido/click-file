<li>
  <button type="button" class="btn btn-link" data-toggle="modal" data-target="#modalUpload">
    <%= file_system.description %>
  </button>
</li>

<%= form_with( url: file_system_create_path(file_system, FileSystem.new), local: true) do |f| %>
  <div class="modal fade" id="modalUpload" tabindex="-1" role="dialog" aria-labelledby="modalUploadLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalUploadLabel"><%= file_system.description %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
        
          <div class="form-group">
            <%= f.label :attached_file, 'Nome' %>
            <%= f.file_field :attached_file, class: 'form-control' %>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          <%= f.submit action_text, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
